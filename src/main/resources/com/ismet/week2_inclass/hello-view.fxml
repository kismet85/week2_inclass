<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ismet.week2_inclass.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="distanceLabel" text="Distance (km):" />
    <TextField fx:id="distanceField" promptText="Enter distance in km" />


    <Label fx:id="fuelLabel" text="Fuel Used (liters):" />
    <TextField fx:id="fuelField" promptText="Enter fuel amount in liters" />


    <Button fx:id="calculateButton" text="Calculate" onAction="#onCalculateButtonClick" />


    <Label fx:id="resultLabel" text="Fuel consumption: ?" />


    <Button fx:id="btnEN" onAction="#onbtnENClick" text="EN" />
    <Button fx:id="btnFR" onAction="#onbtnFRClick" text="FR" />
    <Button fx:id="btnJP" onAction="#onbtnJPClick" text="JP" />
    <Button fx:id="btnIR" onAction="#onbtnIRClick" text="IR" />
</VBox>
